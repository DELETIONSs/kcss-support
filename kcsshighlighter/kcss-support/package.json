{
  "name": "kcss-support",
  "displayName": "KCSS Syntax Highlighter",
  "description": "Syntax highlighting for the KCSS preprocessor language.",
  "version": "0.0.1",
  "publisher": "YourName",
  "icon": "images/icon.png",  // Path to the icon image
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/kcss-support"
  },
  "license": "MIT",
  "contributes": {
    "languages": [
      {
        "id": "kcss",
        "extensions": [".kcss"],
        "aliases": ["KCSS"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kcss",
        "scopeName": "source.kcss",
        "path": "./syntaxes/kcss.tmLanguage.json"
      }
    ]
  },
  "engines": {
    "vscode": "^1.70.0"
  }
}
